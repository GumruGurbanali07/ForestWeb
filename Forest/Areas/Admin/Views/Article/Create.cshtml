@model Forest.Areas.Admin.Models.Articles.CreateArticleDto

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="article.Title"></label>
        <input type="text" asp-for="article.Title" class="form-control w-50" />
        <span asp-validation-for="article.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="article.Content"></label>
        <textarea id="editor" class="form-control w-50" asp-for="article.Content"></textarea>
        <span asp-validation-for="article.Content"></span>
    </div>
    <div class="form-group">
        <label for="photo">Photo</label>
        <input type="file" accept="image/*" asp-for="Photo" class="form-control w-50" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <select asp-for="article.CategoryId" class="form-control w-50" asp-items="@(new SelectList(Model.Categories, nameof(Category.Id), nameof(Category.CategoryName)))">
            <option>Seçim</option>
        </select>
    </div>

    <div class="form-group">
        <select name="tagIds" multiple class="form-control w-50" asp-items="@(new SelectList(Model.Tags, nameof(Tag.Id), nameof(Tag.TagName)))">
            <option>Seçim</option>
        </select>
        <span asp-validation-for="tagIds" class="text-danger"></span>

    </div>
    <input type="submit" value="Create" class="btn btn-info w-50" />
</form>


@section Scripts{

    <script src="//cdn.ckeditor.com/4.22.1/full/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('editor');
    </script> 
}

