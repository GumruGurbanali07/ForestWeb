@{
    Layout = "_AuthLayout";
}
@model RegisterDTO
<div class="auth-form-light text-left p-5 ">
    <div class="brand-logo">
        <img src="~/admin/images/logo-dark.svg">
    </div>
    <h4>New here?</h4>
    <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
    <form class="user" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group border border-success">
            <input type="text" asp-for="FirstName" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="FirstName">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group border border-success">
            <input type="text" asp-for="LastName" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="LastName">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group border border-success">
            
            <input type="email" asp-for="Email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
      
        <div class="form-group border border-success">
            <input type="password" asp-for="Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group border border-success">
            <input type="passwordconfirm" asp-for="PasswordConfirmation" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Repeat Password">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="mb-4">
            <div class="form-check">
                <label class="form-check-label text-muted">
                    <input type="checkbox" class="form-check-input"> I agree to all Terms & Conditions
                </label>
            </div>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn btn-success btn-outline-dark" >SIGN UP</button>
        </div>
        <div class="text-center mt-4 font-weight-light">
            Already have an account? <a href="/auth/login" class="text-primary">Login</a>
        </div>
    </form>
</div>