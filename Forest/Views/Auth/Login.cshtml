@{
    Layout = "AutLayout";
}
@model LoginDTO

<div class="auth-form-light text-left p-5 ">
    <div class="brand-logo">
        <img src="~/admin/images/logo-dark.svg">
    </div>
    <h4 class="text-dark">Hello! let's get started</h4>
    <h6 class="font-weight-light">Sign in to continue.</h6>
    <form class="user" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group border border-success">
            <input  asp-for="Email" type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Username">
        <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group border border-success">
            <input asp-for="Password" type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group border border-success">
            <div class="custom-control custom-checkbox small">
                <input asp-for="RememberMe" type="checkbox" class="custom-control-input" id="customCheck">
                <label class="custom-control-label" for="customCheck">
                    Remember
                    Me
                </label>
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn btn-success btn-outline-dark">SIGN IN</button>>
        </div>
        <div class="my-2 d-flex justify-content-between align-items-center">
            <div class="form-check">
                <label class="form-check-label text-muted">
                    
                    <input asp-for="RememberMe" type="checkbox" class="form-check-input"> Keep me signed in
                    <span asp-validation-for="RememberMe" class="text-danger"></span>
                </label>
            </div>
            <a href="#" class="auth-link text-black">Forgot password?</a>
        </div>
        <div class="mb-2">
            
        </div>
        <div class="text-center mt-4 font-weight-light">
            Don't have an account? <a href="/auth/register" class="text-primary">Create</a>
        </div>
    </form>
</div>
